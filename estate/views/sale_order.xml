<odoo>
    <record id="view_form_sale_order_wizard" model="ir.ui.view">
        <field name="name">sale.order.wizard.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <group>
                    <field name="training_date" widget="date"/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_list_sale_order" model="ir.ui.view">
        <field name="name">sale.order.list</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Other fields -->
                <button name="open_training_date_wizard" string="Date de formation" type="object" class="oe_highlight"/>
            </tree>
        </field>
    </record>
</odoo>
