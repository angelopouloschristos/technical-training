<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_choose_training_date_wizard_form" model="ir.ui.view">
        <field name="name">choose.training.date.wizard.form</field>
        <field name="model">choose.training.date.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Choose Training Date">
                <group>
                    <field name="start_date" required="1"/>
                    <field name="end_date" required="1"/>
                </group>
                <footer>
                    <xpath expr="//button[@name='action_confirm']" position="after">
                        <button name="confirm_dates" string="Confirm"/>
                        or
                        <button string="Cancel" special="cancel"/>
                    </xpath>
                </footer>
            </form>
        </field>
    </record>
</odoo>
